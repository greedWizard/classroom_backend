COMPOSE_PROJECT_NAME=classroom

DEBUG_MODE=1

#
POSTGRES_DB=classroom2
POSTGRES_USER=classroom
POSTGRES_PASSWORD=classroom
POSTGRES_HOST=db
POSTGRES_PORT=5432
SCHEDULER_NAME=classroom-scheduler
CACHE_SERVICE_HOST=redis
CACHE_SERVICE_PORT=6379
