# APP SETTINGS
APP_SECRET_KEY=changeme
MINIMAL_DAYS_DELTA=1
CLEANUP_TIMEOUT=100
ALLOWED_CORS_ORIGINS=*,localhost,back
AUTHJWT_SECRET_KEY=supersecretkey
BASE_FRONT_URL=http://localhost:8080
FRONTEND_LOGIN_URL=${BASE_FRONT_URL}/users/login
FRONTEND_ROOM_POST_URL=${BASE_FRONT_URL}/rooms/{room_id}/roomPosts/{room_post_id}
FRONTEND_USER_RESET_PASSWORD_URL=${BASE_FRONT_URL}/users/reset-password
FRONTEND_PASSWORD_RECOVERY_URL=${BASE_FRONT_URL}/users/reset-password/{token}
HUEY_IMMEDIATE=0

# SMTP SETTINGS
SMTP_DEBUG_MODE=1
SMTP_MAIL_FROM=noreply@bezpart.ru
SMTP_PASSWORD=passwordhere
SMTP_MAIL_PORT=2525
SMTP_MAIL_SERVER=smtp.mail.ru
SMTP_MAIL_USER=noreply@bezpart.ru

# STATIC
STATIC_URL=http://localhost:8000/api/v1/attachments/{file_id}
